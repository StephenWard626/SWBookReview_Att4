@model SWBook.Models.Groups

@{
    ViewData["Title"] = "Create a new Group";
}

<h1>New Group</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupGenre" class="control-label"></label>
                <input asp-for="GroupGenre" class="form-control" />
                <span asp-validation-for="GroupGenre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupSeries" class="control-label"></label>
                <input asp-for="GroupSeries" class="form-control" />
                <span asp-validation-for="GroupSeries" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Group List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
