@model SWBook.Models.Reviews

@{
    ViewData["Title"] = "Add Review";
}

<h1>Add Review</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ReviewBook" class="control-label"></label>
                <input asp-for="ReviewBook" class="form-control" />
                <span asp-validation-for="ReviewBook" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReviewCont" class="control-label"></label>
                <input asp-for="ReviewCont" class="form-control" />
                <span asp-validation-for="ReviewCont" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating" class="control-label"></label>
                <input asp-for="Rating" class="form-control" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Review" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Review List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
