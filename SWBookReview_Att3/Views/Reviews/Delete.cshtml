@model SWBook.Models.Reviews

@{
    ViewData["Title"] = "Delete Review";
}

<h1>Delete Review</h1>

<h3>Are you sure you want to delete this Review - this cannot be undone?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewBook)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewBook)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ReviewCont)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReviewCont)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
